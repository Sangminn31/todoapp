<h1><%= post.title %></h1>
<p><%= post.content %></p>
<small>Posted by <%= post.user.username %> on <%= post.createdAt.toDateString() %></small>

<% if (user && user._id.toString() === post.user._id.toString()) { %>
  <a href="/posts/edit/<%= post._id %>" class="btn btn-warning">Edit</a>
  <form action="/posts/delete/<%= post._id %>" method="POST">
    <button type="submit" class="btn btn-danger">Delete</button>
  </form>
<% } %>
