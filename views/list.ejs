<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/main.css" rel="stylesheet">
    <title>Todo App</title>
</head>
<body class="grey-bg">
    <%- include('nav.ejs') %>

    <div class="bg-white">
        <% for (let i=0;i < posts.length ;i++) { %>
            <div class="list-box">
                <h4>
                    <a href="/detail/<%= posts[i]._id %>"> <%= posts[i].title %> </a>
                    <a href="/edit/<%= posts[i]._id %>">‚úèÔ∏è</a>
                    <button class="delete" data-id="<%= posts[i]._id %>">üóëÔ∏è</span>
                </h4>
                <p><%= posts[i].content %></p>
            </div>
            <% } %>
            <div class="pagination">
                <% for(let i = 1; i <= totalPages; i++) { %>
                    <% if(i == currentPage) { %>
                        <span><%= i %></span> <!-- Highlight the current page number -->
                    <% } else { %>
                        <a href="/list/<%= i %>"><%= i %></a>
                    <% } %>
                <% } %>
            </div>
    </div>

    <script>
        document.querySelectorAll('.delete').forEach(button => {
            button.addEventListener('click', function(e) {
                const isConfirmed = confirm("Do you want to delete this post?");
                if (isConfirmed) {
                    fetch('/delete?docid=' + e.target.dataset.id, {
                        method: 'DELETE'
                    })
                    .then(response => {
                        if (response.ok) {
                            console.log('Post deleted successfully');
                            e.traget.parentElement.parentElement.style.display = 'none'
                        } else {
                            console.error('Deletion failed');
                        }
                    })
                    .catch(error => console.error('Error:', error));
                } else {
                    console.log('Deletion canceled');
                }
            });
        });
    </script>


</body>
</html>