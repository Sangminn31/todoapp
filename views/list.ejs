<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List</title>
    <link rel="stylesheet" href="/main.css">
</head>
<body>
    <%- include('nav.ejs') %>
    <div class="container">
        <h1>Todo List</h1>
        
        <% if (messages.success) { %>
            <div class="alert alert-success"><%= messages.success %></div>
        <% } %>
        <% if (messages.error) { %>
            <div class="alert alert-danger"><%= messages.error %></div>
        <% } %>
        
        <div class="search-box">
            <form action="/search" method="GET">
                <input type="text" name="query" placeholder="Search todos...">
                <button type="submit">Search</button>
            </form>
        </div>
        
        <div class="list-container">
            <% if (posts.length > 0) { %>
                <% posts.forEach(function(post) { %>
                    <div class="list-box">
                        <h4>
                            <a href="/detail/<%= post._id %>"><%= post.title %></a>
                            <div class="button-group">
                                <a href="/edit/<%= post._id %>" class="button-style">Edit</a>
                                <form action="/delete?_method=DELETE" method="POST" style="display: inline;">
                                    <input type="hidden" name="docid" value="<%= post._id %>">
                                    <button type="submit" class="delete">Delete</button>
                                </form>
                            </div>
                        </h4>
                        <p><%= post.content %></p>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No posts available</p>
            <% } %>
        </div>
        <div class="pagination">
            <% for (let i = 1; i <= totalPages; i++) { %>
                <% if (i === currentPage) { %>
                    <span><%= i %></span>
                <% } else { %>
                    <a href="/list/<%= i %>"><%= i %></a>
                <% } %>
            <% } %>
        </div>
    </div>
</body>
</html>
